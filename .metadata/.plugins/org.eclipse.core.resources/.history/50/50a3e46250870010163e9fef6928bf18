[General]
network = NetworkA

# Attiva i dettagli per debug dei messaggi B-MAC
**.wlan*.mac.debug = true
**.wlan*.radio.debug = true
*.Host*.numApps = 1
*.Host*.app[0].typename = "UdpBasicApp"
*.Host*.app[0].destAddresses = "Hub"
*.Host*.app[0].destPort = 5000
*.Host*.app[0].messageLength = 50B
*.Host*.app[0].sendInterval = exponential(1s)

*.Hub.numApps = 1
*.Hub.app[0].typename = "UdpSink"
*.Hub.app[0].localPort = 5000

*.Host*.wlan[0].typename = "BMacInterface"
*.Hub.wlan[0].typename = "BMacInterface"




# Parametri energetici
*.Host*.energyStorage.typename = "SimpleEpEnergyStorage"
*.Host*.energyStorage.initialCapacity = 1J
*.Host*.energyStorage.nominalCapacity = 1J

*.Host*.energyConsumer.typename = "SensorStateBasedEpEnergyConsumer"

*.Hub.energyStorage.typename = "SimpleEpEnergyStorage"
*.Hub.energyStorage.initialCapacity = 5J
*.Hub.energyStorage.nominalCapacity  = 5J

*.Hub.energyConsumer.typename = "SensorStateBasedEpEnergyConsumer"

# Parametri B-MAC
*.Host*.wlan[0].mac.checkInterval = 0.1s    # slot di ascolto
*.Host*.wlan[0].mac.slotDuration = 0.05s
*.Host*.wlan[0].mac.useMacAcks = true

*.Hub.wlan[0].mac.checkInterval = 0.1s
*.Hub.wlan[0].mac.slotDuration = 0.05s
*.Hub.wlan[0].mac.useMacAcks = true

# Logging energia
**.energyConsumer.logLevel = 3

