[General]
network = NetworkA
sim-time-limit = 100s

# ---------------------------------------------------
# Debug B-MAC e radio
# ---------------------------------------------------
**.wlan*.mac.debug = true
**.wlan*.radio.debug = true

# ---------------------------------------------------
# Applicazioni dei nodi sensore
# ---------------------------------------------------
*.Host*.numApps = 1
*.Host*.app[0].typename = "UdpBasicApp"
*.Host*.app[0].destAddresses = "Hub"
*.Host*.app[0].destPort = 5000
*.Host*.app[0].messageLength = 50B
*.Host*.app[0].sendInterval = exponential(1s)

# Applicazione dell'hub centrale
*.Hub.numApps = 1
*.Hub.app[0].typename = "UdpSink"
*.Hub.app[0].localPort = 5000

# ---------------------------------------------------
# Interfaccia B-MAC
# ---------------------------------------------------
*.Host*.wlan[0].typename = "BMacInterface"
*.Hub.wlan[0].typename = "BMacInterface"

# Parametri B-MAC
*.Host*.wlan[0].mac.slotDuration = 0.05s
*.Host*.wlan[0].mac.checkInterval = 0.1s
*.Host*.wlan[0].mac.useMACAcks = true
*.Host*.wlan[0].mac.macMaxFrameRetries = 3
*.Host*.wlan[0].mac.radioModule = "^.radio"
*.Host*.wlan[0].mac.animation = true

*.Hub.wlan[0].mac.slotDuration = 0.05s
*.Hub.wlan[0].mac.checkInterval = 0.1s
*.Hub.wlan[0].mac.useMACAcks = true
*.Hub.wlan[0].mac.macMaxFrameRetries = 3
*.Hub.wlan[0].mac.radioModule = "^.radio"
*.Hub.wlan[0].mac.animation = true

# ---------------------------------------------------
# Radio
# ---------------------------------------------------
*.Host*.wlan[0].radio.typename = "Ieee80211ScalarRadio"
*.Hub.wlan[0].radio.typename = "Ieee80211ScalarRadio"

# Radio parameters (puoi personalizzare potenza, guadagno, sensibilit√†)
*.Host*.wlan[0].radio.transmitter.power = 0.01W
*.Host*.wlan[0].radio.receiver.sensitivity = -85dBm
*.Host*.wlan[0].radio.bitRate = 19200bps

*.Hub.wlan[0].radio.transmitter.power = 0.05W
*.Hub.wlan[0].radio.receiver.sensitivity = -85dBm
*.Hub.wlan[0].radio.bitRate = 19200bps

# ---------------------------------------------------
# Energia
# ---------------------------------------------------
*.Host*.energyStorage.typename = "SimpleEpEnergyStorage"
*.Host*.energyStorage.initialCapacity = 1J
*.Host*.energyStorage.nominalCapacity = 1J

*.Host*.energyConsumer.typename = "SensorStateBasedEpEnergyConsumer"

*.Hub.energyStorage.typename = "SimpleEpEnergyStorage"
*.Hub.energyStorage.initialCapacity = 5J
*.Hub.energyStorage.nominalCapacity = 5J

*.Hub.energyConsumer.typename = "SensorStateBasedEpEnergyConsumer"

# Logging energia
**.energyConsumer.logLevel = 3
